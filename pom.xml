    <groupId>nomisvai</groupId>

    <modelVersion>4.0.0</modelVersion>

    <name>SampleService</name>

    <packaging>jar</packaging>

    <profiles>
        <profile>
            <activation>
                <activeByDefault>false</activeByDefault>
                <file>
                    <exists>${basedir}/src/test/java</exists>
                </file>
            </activation>
            <dependencies>
                <dependency>
                    <artifactId>junit-jupiter-api</artifactId>
                    <groupId>org.junit.jupiter</groupId>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <artifactId>junit-jupiter-params</artifactId>
                    <groupId>org.junit.jupiter</groupId>
                    <scope>test</scope>
                    <version>${junit-jupiter.version}</version>
                </dependency>
            </dependencies>
            <id>profile-java-has-test-sources</id>
        </profile>
    </profiles>

    <properties>
        <bouncycastle.version>1.0.2</bouncycastle.version>
        <dropwizard.version>2.0.20</dropwizard.version>
        <fakevaultdir>fakevault</fakevaultdir>
        <junit-jupiter.version>5.7.1</junit-jupiter.version>
